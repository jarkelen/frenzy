- model_class = Gameround
.row
  .span12
    .page-header
      %h1=t '.title', default: model_class.model_name.human

    %p
      %strong= model_class.human_attribute_name(:number) + ':'
      %br
      = @gameround.number
    %p
      %strong= model_class.human_attribute_name(:start_date) + ':'
      %br
      = @gameround.start_date
    %p
      %strong= model_class.human_attribute_name(:end_date) + ':'
      %br
      = @gameround.end_date
    %p
      %strong= model_class.human_attribute_name(:processed) + ':'
      %br
      = @gameround.processed
    %p
      %strong= model_class.human_attribute_name(:period_id) + ':'
      %br
      = @gameround.period_id

    .form-actions
      = link_to t('.back', default: t("helpers.links.back")), gamerounds_path, class: 'btn'
      - if can? :update, Gameround
        = link_to t('.edit', default: t("helpers.links.edit")), edit_gameround_path(@gameround), class: 'btn'
        = link_to t('.destroy', default: t("helpers.links.destroy")), gameround_path(@gameround), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
