%table.table.table-striped
  %thead
    %tr
      %th= I18n.t('.ranking.position')
      %th= I18n.t('.ranking.team')
      %th= I18n.t('.ranking.total_score')
      %th= I18n.t('.joker.jokers_short')
  %tbody
    - nr = 1
    - unless @personal_rankings.blank?
      - @personal_rankings.each do |ranking|
        - player = Player.find(ranking[0])
        %tr
          %td= "#{nr}."
          %td= link_to player.user.team_name, user_path(player.user)
          %td= ranking[1]
          %td= "#{player.jokers.size} / #{player.assigned_jokers}"
        - nr += 1
  %thead
    %tr
      %th{ colspan: 4 }