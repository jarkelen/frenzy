- model_class = League
.row
  .span12
    .page-header
      %h1=t '.title', default: model_class.model_name.human

    %p
      %strong= model_class.human_attribute_name(:league_name) + ':'
      %br
      = @league.league_name
    %p
      %strong= model_class.human_attribute_name(:league_short) + ':'
      %br
      = @league.league_short
    %p
      %strong= model_class.human_attribute_name(:level) + ':'
      %br
      = @league.level

    .form-actions
      = link_to t('.back', default: t("helpers.links.back")), leagues_path, class: 'btn'
      - if can? :update, League
        = link_to t('.edit', default: t("helpers.links.edit")), edit_league_path(@league), class: 'btn'
        = link_to t('.destroy', default: t("helpers.links.destroy")), league_path(@league), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
