%head
  %title= I18n.t(".site.title")

  %meta{ :charset => "utf-8" }
  %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tag

  /[if lt IE 9]
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
%body
  .site_canvas
    .container

      / Header
      .row
        %header
          .span6
            .title= link_to I18n.t(".site.title"), root_path
          .span6
            - if signed_in?
              .salutation= "#{I18n.t(".site.salutation")} #{current_user.first_name}!"

      / Topbar
      .row
        .span12
          .navbar
            .navbar-inner
              .container
                %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar

                .nav-collapse.collapse
                  %ul.nav
                    %li.active
                      = link_to I18n.t(".site.home"), root_path
                    %li.divider-vertical
                  %ul.nav.pull-right
                    - if signed_in?
                      %li.dropdown.pull-right
                        %a#drop1.dropdown-toggle{ "data-toggle" => "dropdown", href: "#", :role => "button" }
                          = I18n.t(".site.admin")
                          %b.caret
                          %ul.dropdown-menu{ "aria-labelledby" => "drop1", role: "menu" }
                            %li= link_to t('.league.leagues'), leagues_path
                            %li= link_to t('.club.clubs'), clubs_path
                            %li= link_to t('.gameround.gamerounds'), gamerounds_path
                            %li= link_to t('.result.results'), results_path
                      %li.divider-vertical
                      %li.dropdown.pull-right
                        %a#drop1.dropdown-toggle{ "data-toggle" => "dropdown", href: "#", :role => "button" }
                          = I18n.t(".account.my_account")
                          %b.caret
                          %ul.dropdown-menu{ "aria-labelledby" => "drop1", role: "menu" }
                            %li= link_to t('.sign_out'), sign_out_path, method: :delete

      / Messages
      .row
        .span12.messages
          - flash.each do |name, msg|
            %div{:class => "alert alert-#{name}"}
              %a.close{"data-dismiss" => "alert"} x
              = msg

      / Content
      .yield
        = yield

      / Footer
      .row
        .span12
          %footer
            %h5.subheader
              &copy; 2013
              %a{:href => "https://twitter.com/DutchAddick"} DutchAddick
