%head
  %title= I18n.t(".site.title")

  %meta{ :charset => "utf-8" }
  %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tag

  /[if lt IE 9]
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
%body
  .container
    / Header
    .row
      %header
        .span6
          .title= link_to I18n.t(".site.title"), root_path
        .span6
          .profile
            - if signed_in?
              = "#{I18n.t(".site.salutation")} #{current_user.first_name}"
              = link_to t('.sign_out'), sign_out_path, method: :delete
            - else
              = link_to t('.sign_in'), sign_in_path
              |
              = link_to t('.sign_up'), sign_up_path

    / Topbar
    .row
      .span12
        .navbar
          .navbar-inner
            .container
              %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
                %span.icon-bar
                %span.icon-bar
                %span.icon-bar

              .nav-collapse.collapse
                %ul.nav
                  %li.active
                    = link_to I18n.t(".site.home"), root_path
                  %li.divider-vertical
                  %li
                    = link_to "bla", root_path

    / Messages
    .row
      .span12.messages
        - flash.each do |name, msg|
          %div{:class => "alert alert-#{name}"}
            %a.close{"data-dismiss" => "alert"} x
            = msg

    / Content
    = yield

    / Footer
    .row
      .span12
        %footer
          %h5.subheader
            &copy; 2013
            %a{:href => "https://twitter.com/DutchAddick"} DutchAddick
