- model_class = Club
.row
  .span12
    .page-header
      %h1=t '.title', default: model_class.model_name.human

    %p
      %strong= model_class.human_attribute_name(:club_name) + ':'
      %br
      = @club.club_name
    %p
      %strong= model_class.human_attribute_name(:period1) + ':'
      %br
      = @club.period1
    %p
      %strong= model_class.human_attribute_name(:period2) + ':'
      %br
      = @club.period2
    %p
      %strong= model_class.human_attribute_name(:period3) + ':'
      %br
      = @club.period3
    %p
      %strong= model_class.human_attribute_name(:period4) + ':'
      %br
      = @club.period4
    %p
      %strong= model_class.human_attribute_name(:league_id) + ':'
      %br
      = @club.league.league_name

    .form-actions
      = link_to t('.back', default: t("helpers.links.back")), clubs_path, class: 'btn'
      - if can? :create, Club
        = link_to t('.edit', default: t("helpers.links.edit")), edit_club_path(@club), class: 'btn'
        = link_to t('.destroy', default: t("helpers.links.destroy")), club_path(@club), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger'
