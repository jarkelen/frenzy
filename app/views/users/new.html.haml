.row
  .offset3.span6
    #clearance.signin_container
      = form_for @user do |f|
        %h2= I18n.t('.sessions.new.sign_up')
        = render "layouts/error_messages", target: @user
        = f.hidden_field :role, value: 'user'
        = f.text_field :first_name, class: "input-block-level", placeholder: I18n.t('.user.first_name')
        = f.text_field :last_name, class: "input-block-level", placeholder: I18n.t('.user.last_name')
        = f.text_field :team_name, class: "input-block-level", placeholder: I18n.t('.user.team_name')
        = f.text_field :email, class: "input-block-level", placeholder: I18n.t('.user.email')
        = f.password_field :password, class: "input-block-level", placeholder: I18n.t('.user.password')
        = f.label I18n.t('.user.language')
        = f.collection_select :language, [['nl', I18n.t('.general.dutch')] ,['en', I18n.t('.general.english')]], :first, :last
        .submit
          = f.submit(class: 'btn btn-large')
          = link_to t('.or_sign_in'), sign_in_path