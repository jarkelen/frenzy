.row
  .span12
    .page-header
      %h1= I18n.t('.result.edit')

    = form_for @result, html: { class: 'form-horizontal' } do |f|
      = render "layouts/error_messages", target: @result
      .control-group
        = f.label @result.home_club.club_name
        = f.text_field :home_score, class: "small_text_field"
      .control-group
        = f.label @result.away_club.club_name
        = f.text_field :away_score, class: "small_text_field"
      .control-group
        .controls
          = f.submit :submit, value: I18n.t('.general.save'), class: 'btn'
          = link_to t('.cancel', default: t("helpers.links.cancel")), results_path, class: 'btn'