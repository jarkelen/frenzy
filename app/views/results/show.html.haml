- model_class = Result
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:club_home_id) + ':'
  %br
  = @result.club_home_id
%p
  %strong= model_class.human_attribute_name(:club_away_id) + ':'
  %br
  = @result.club_away_id
%p
  %strong= model_class.human_attribute_name(:score_hoem) + ':'
  %br
  = @result.score_hoem
%p
  %strong= model_class.human_attribute_name(:score_away) + ':'
  %br
  = @result.score_away
%p
  %strong= model_class.human_attribute_name(:gameround_id) + ':'
  %br
  = @result.gameround_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), results_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_result_path(@result), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), result_path(@result), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
