- model_class = Result
.row
  .span12
    .page-header
      %h1=t '.title', default: model_class.model_name.human.pluralize
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
          %th= model_class.human_attribute_name(:home_club_id)
          %th= model_class.human_attribute_name(:away_club_id)
          %th= I18n.t('.result.result')
          %th= model_class.human_attribute_name(:gameround_id)
          - if can? :update, Result
            %th=t '.actions', default: t("helpers.actions")
      %tbody
        - @results.each do |result|
          %tr
            %td= result.id
            %td= result.home_club.club_name
            %td= result.away_club.club_name
            %td= "#{result.home_score}-#{result.away_score}"
            %td= result.gameround_id
            - if can? :update, Result
              %td
                = link_to t('.edit', default: t("helpers.links.edit")), edit_result_path(result), class: 'btn btn-mini'
                = link_to t('.destroy', default: t("helpers.links.destroy")), result_path(result), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

    - if can? :create, Result
      = link_to t('.new', default: t("helpers.links.new")), new_result_path, class: 'btn'
