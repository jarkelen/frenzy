= simple_form_for @period, html: { class: 'form-horizontal' } do |f|
  = f.input :period_nr
  = f.input :name
  = f.input :start_date, as: :date
  = f.input :end_date, as: :date
  .form-actions
    = f.button :submit, value: I18n.t('.general.save'), class: 'btn'
    = link_to t('.cancel', default: t("helpers.links.cancel")), periods_path, class: 'btn'
