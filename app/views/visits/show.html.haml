.row
  .span12
    %p= link_to I18n.t('.visit.details.back'), visits_path

.row
  .span12
    .page-header
      %h1= I18n.t('.visit.details.match_details')

.row-fluid
  .span10.offset1
    .club_details.hero-unit
      .span6
        %ul
          %li= "#{I18n.t('.visit.visit_nr')}:"
          %li= "#{I18n.t('.visit.league')}:"
          %li= "#{I18n.t('.visit.details.match')}:"
          %li= "#{I18n.t('.visit.result')}:"
          %li= "#{I18n.t('.visit.gate')}:"
          %li= "#{I18n.t('.visit.visit_date')}:"
          %li= "#{I18n.t('.visit.kickoff')}:"
          %li= "#{I18n.t('.visit.ground')}:"
          %li= "#{I18n.t('.visit.details.location')}:"
      .span6
        %ul
          %li
            = @visit.visit_nr
            \/
            current_user.visits.size
          %li= @visit.league
          %li
            = @visit.club_home
            v
            = @visit.club_away
          %li= @visit.result
          %li= @visit.gate
          %li= @visit.visit_date.strftime("%d-%m-%Y")
          %li= @visit.kickoff
          %li= @visit.ground
          %li= "#{@visit.street}, #{@visit.city}"
      .clearfix

    - if can? :edit, Visit
      .btn.btn-mini= link_to I18n.t('.general.edit'), edit_visit_path(@visit)
      .btn.btn-mini= link_to I18n.t('.destroy', default: t("helpers.links.destroy")), visit_path(@visit), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }